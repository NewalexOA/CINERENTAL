# Application settings
APP_NAME=CINERENTAL
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=use-very-long-random-string-in-production

# Server settings
ALLOWED_HOSTS=your-domain.com,api.your-domain.com
WORKERS_COUNT=4
LOG_LEVEL=warning

# Database settings
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=cinerental_prod
POSTGRES_USER=cinerental_prod
POSTGRES_PASSWORD=strong-password-here

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=strong-redis-password-here

# Security settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
CORS_ORIGINS=https://your-domain.com

# Storage settings
UPLOAD_DIR=/app/media
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# API settings
API_V1_STR=/api/v1

# JWT settings
JWT_SECRET_KEY=use-very-long-random-string-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
